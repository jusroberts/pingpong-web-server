%script{:src => "/javascript/webcam.js"}
#results Your captured image will appear here...
#my_camera

=form_tag room_game_player_attach_image_post_path(room_id: @id) do
  %input#fileToUpload{:name => "fileToUpload", :type => "file"}/
  %input{:onclick => "take_snapshot()", :type => "button", :value => "Take Snapshot"}/

:javascript
  Webcam.set({
    width: 320,
    height: 240,
    image_format: 'jpeg',
    jpeg_quality: 90
  });
  Webcam.attach( '#my_camera' );
  function take_snapshot() {
    Webcam.snap( function(data_uri) {
      document.getElementById('results').innerHTML =
        '<h2>Here is your image:</h2>' +
        '<img src="'+data_uri+'"/>';
      $('#my_camera').css("display", "none");
    } );
  }
