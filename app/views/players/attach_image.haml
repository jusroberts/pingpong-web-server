%h1 WebcamJS Test Page
%h3 Demonstrates simple 320x240 capture &amp; display
#my_camera

%form
%input{:onclick => "take_snapshot()", :type => "button", :value => "Take Snapshot"}/

:javascript
  Webcam.set({
    width: 320,
    height: 240,
    image_format: 'jpeg',
    jpeg_quality: 90
  });
  Webcam.attach( '#my_camera' );
  function take_snapshot() {
    Webcam.snap( function(data_uri) {
      document.getElementById('results').innerHTML =
        '<h2>Here is your image:</h2>' +
        '<img src="'+data_uri+'"/>';
      $('#my_camera').css("visibility", "hidden");
    } );
  }
