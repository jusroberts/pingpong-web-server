=form_tag room_game_login_as_player_post_path(id: @id, player_id: @player.id), class: 'login-as-player' do
  - if @error
    %div.error
      #{@error}
  =image_tag @player.image_url, alt: @player.name, height: 200, width: 200, class: 'player-icon'
  %div.player-name 
    #{@player.name}
  =label_tag "pin", "Enter PIN", class:"pin-entry-label"
  =password_field_tag "pin", nil, class:"pin-entry", autofocus: true
  = submit_tag "OK!", class:"submit-pin-entry"
    
