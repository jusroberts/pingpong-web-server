=form_tag room_game_new_player_post_path(id: @id) do
  =label_tag :name
  =text_field_tag :name, "", class: "player-name-input"

  -alphabet.each do |letter|
    =link_to letter, '#', class: 'button', onclick: "append_character('#{letter}')"
  .button{onclick: "remove_character()"}="DEL"

  =submit_tag "OK!", class: "player-submit"

  :javascript
    function append_character(letter) {
      $(".player-name-input").val(  $(".player-name-input").val() + letter);
    }

    function remove_character() {
        var inputValue = $(".player-name-input").val();
        $(".player-name-input").val(inputValue.substring(0, inputValue.length-1));
    }
