%h1.center
  Bathrooms
%br
.row.small-up-2.medium-up-4
  - @bathrooms.each do |bathroom|
    .column
      .center
        - border = bathroom.is_full? ? "occupied-border" : "vacant-border"
        = link_to bathroom_path(bathroom.id) do
          = image_tag("bathroom-stall-icon.jpg", border: 0, height: 175, width: 175, class: border, id: "bathroom#{bathroom.id}")
      %h5.center
        = bathroom.name
      %br
=# column_chart bathroom_stall_stats_path(bathroom_id: @bathrooms[0].id)

:javascript
  let pageType = 'bathroom_index';
