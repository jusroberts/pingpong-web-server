= form_for @bathroom do |f|
  - if @bathroom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bathroom.errors.count, "error")} prohibited this bathroom from being saved:"
      %ul
        - @bathroom.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :token
    = f.text_field :token
  .field
    = f.label :stalls
    = f.number_field :stalls, value: @bathroom.stalls.count
  .actions
    = f.submit 'Save'
