-# -binding.pry
%table#history-table
  %thead
    %tr
      %th
        %h5.street-fighter
          = 'Player Team'
      %th
        %h5.street-fighter
          = 'Opposing Team'
      %th
        %h5.street-fighter
          = 'W/L'
      %th
        %h5.street-fighter
          = 'Team Score'
      %th
        %h5.street-fighter
          = 'Opposing Score'
      %th
        %h5.street-fighter
          = 'Rating Change'
      %th
        %h5.street-fighter
          = 'Time'
  %tbody
    - # @type records [Array<GameHistory>]
    - records.each do |game_id, records|
      - # @type player_record [GameHistory]
      - player_record, player_team, opposing_team = team_names(player.id, records)
      %tr
        %td
          %h5.street-fighter
            = player_team
        %td
          %h5.street-fighter
            = opposing_team
        %td
          %h5.street-fighter
            = player_record.win ? 'W' : 'L'
        %td
          %h5.street-fighter
            = player_record.player_team_score
        %td
          %h5.street-fighter
            = player_record.opponent_team_score
        %td
          %h5.street-fighter
            = (player_record.skill_change * 1000).floor
        %td
          %h5.street-fighter
            = player_record.created_at
:javascript
  let pageType = 'history_table';
